//Q127: Write a program that reads text from input.txt, converts all lowercase letters to uppercase, and writes the result to output.txt.
#include <stdio.h>
#include <ctype.h>

int main() {
    FILE *fin, *fout;
    char ch;

    // Open input file
    fin = fopen("input.txt", "r");
    if (fin == NULL) {
        printf("Error: input.txt cannot be opened!\n");
        return 1;
    }

    // Open output file
    fout = fopen("output.txt", "w");
    if (fout == NULL) {
        printf("Error: output.txt cannot be created!\n");
        fclose(fin);
        return 1;
    }

    // Read each character and convert to uppercase
    while ((ch = fgetc(fin)) != EOF) {
        ch = toupper(ch);    // convert to uppercase
        fputc(ch, fout);     // write to output file
    }

    fclose(fin);
    fclose(fout);

    printf("Conversion completed! Output written to output.txt\n");
    return 0;
}
  
